    <div class="container px-5 py-5 ">
      <div class="d-flex justify-content-center">
        <h3>Danh mục sản phẩm mới</h3>
      </div>
        <div class="container py-5 px-5">
          <div class="d-flex justify-content-center">
              <% categories.forEach(category => {%>
                  <div class="card m-3 d-flex justify-content-center align-items-center" style="width: 18rem;">
                      <div>
                          <img class="card-img" src="/uploads/<%= category.image %>" alt="Card image cap">
                      </div>
                      <div class="card-body">
                          <h5 class="card-title text-center"><%= category.name %></h5>
                          <a href="/danh-muc/<%= category._id %>" class="btn btn-primary">Xem ngay</a>
                      </div>
                  </div>
              <% }) %>
          </div>
      </div>
      <div class="container px-5 py-5 ">
        <div class="d-flex justify-content-center">
          <h3>Sản phẩm nổi bật</h3>
        </div>
        <div class="d-flex justify-content-center py-5">
          <% products.forEach(product=> {%>
            <div class="card  m-3 d-flex justify-content-center align-items-center" style="width: 18rem;">
              <div>
                <img src="/uploads/<%= product.image %>" class="card-img-top" style="width: 150px; height: 150px; padding: 10px;">
              </div>
              <div class="card-body">
                <h5 class="card-title">
                  <%= product.name %>
                </h5>
                <p class="card-text">
                  <%= product.price %> VNĐ
                </p>
                <form action="/gio-hang/them-gio-hang/<%= product._id %>" method="POST">
                  <button type="submit" class="btn btn-primary">Thêm vào giỏ hàng</button>
                </form>
              </div>
            </div>
            <% }) %>
        </div>

