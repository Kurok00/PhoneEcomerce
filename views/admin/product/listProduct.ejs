<%-include('../../components/header.ejs')-%>
<%-include('../../components/header.admin.ejs')-%>
<div class="container px-5 py-5 ">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-striped text-center">
                    <thead>
                        <tr>
                            <th>Tên sản phẩm</th>
                            <th>Danh mục</th>
                            <th>Hình ảnh</th>
                            <th>Giá</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(product=> {%>
                        <tr>
                            <th scope="row"><%= product.name %></th>
                            <th scope="row"><%= product.category.name %></th>
                            <td>
                                <img src="/uploads/<%= product.image %>" alt="" class="img-thumbnail">
                            </td>
                            <td>
                                <p class="price"><%= product.price %> VNĐ</p>
                            </td>
                            <td class="mb-5">
                                <a  href="/admin/san-pham/cap-nhat/<%= product._id %>"><button type="button" class="btn btn-warning mb-3">Sửa</button></a>
                                <form action="" method="POST">
                                        <button type="submit" class="btn btn-danger">Xoá</button>
                                </form>
                            </td>
                            <% }) %>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    const price = document.querySelector('.price')
    console.log(price);
</script>
<%-include('../../components/footer.ejs')-%>
