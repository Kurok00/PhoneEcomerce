<%-include('../../components/header.ejs')-%>
<%-include('../../components/header.admin.ejs')-%>
<div class="container px-5 py-5 ">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-striped text-center">
                    <thead>
                        <tr>
                            <th>Tên Danh mục</th>
                            <th>Hình ảnh</th>
                            <th>Ngày tạo</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% categories.forEach(category => {%>
                        <tr>
                            <th scope="row"><%= category.name %></th>
                            <td>
                            <img src="/uploads/<%= category.image %>" alt="<%= category.name %>" class="img-thumbnail">
                            </td>
                            <td><%= category.createdAt %></td>
                            <td class="mb-5">
                                <a  href="/admin/danh-muc/cap-nhat/<%= category._id %>"><button type="button" class="btn btn-warning mb-3">Sửa</button></a>
                                <form action="/admin/danh-muc/xoa/<%= category._id %>?_method=DELETE" method="POST">
                                        <button type="submit" class="btn btn-danger">Xoá</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%-include('../../components/footer.ejs')-%>