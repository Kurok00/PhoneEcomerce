<%-include('components/header.ejs')-%>
<%-include('components/navbar.ejs')-%>
<div class="conatiner px-5 py-5">
    <h1 class="d-flex justify-content-center">Danh mục sản phẩm</h1>
    <% products.forEach(product => {%>
        <div class="card m-3 d-flex justify-content-center align-items-center" style="width: 18rem;">
            <div>
                <img class="card-img" src="/uploads/<%= product.image %>" alt="Card image cap">
            </div>
            <div class="mt-3 mb-3">
                <h5 class="card-title text-center" style="font-size: 13px;"><%= product.name %></h5>
            </div>
            <div class="card-body">
                <h5 class="card-title text-center" style="font-size: 15px;"><%= product.price %></h5>
                <a href="/danh-sach-san-pham/san-pham/<%= product._id %>" class="btn btn-primary">Xem chi tiết</a>
            </div>
        </div>
    <% }) %>
</div>
<%-include('components/footer.nav.ejs')-%>
<%-include('components/footer.ejs')-%>