<%-include('components/header.ejs')-%>
<%-include('components/navbar.ejs')-%>
<div class="bg-primary">
    <div class="container">
        <p class="bcreak-crum">
            <a class="site-map" href="/">Trang chủ</a>  /  <a class="site-map" href="/gio-hang">Giỏ hàng</a>
        </p>
    </div>
</div>
<div class="container px-5 py-5 ">
    <% if (cart && cart.products.length > 0) { %>
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-striped text-center">
                        <thead>
                            <tr>
                                <th>Tên sản phẩm</th>
                                <th>Hình ảnh</th>
                                <th>Giá</th>
                                <th>Số lượng</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% cart.products.forEach(item => { %>
                            <tr>
                                <th scope="row">
                                    <p class="text-start"><%= item.productId.name %></p>
                                </th>
                                <td>
                                    <img src="/uploads/<%= item.productId.image %>" alt="" class="card-img">
                                </td>
                                <td>
                                    <p class="price"> <%= item.productId.price %> VNĐ</p>
                                </td>
                                <td>
                                    <p > <%= item.quantity %></p>
                                </td>
                                <td>
                                    <form action="/gio-hang/xoa/<%= cart._id %>?_method=DELETE" method="POST">
                                        <button type="submit" class="btn btn-danger">Xoá</button>
                                    </form>
                                </td>
                                <% }) %>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
      <% } else { %>
        <li>Your cart is empty</li>
      <% } %>
</div>
<%-include('components/footer.nav.ejs')-%>
<%-include('components/footer.ejs')-%>