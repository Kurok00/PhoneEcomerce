<%-include('components/header.ejs')-%>
<%-include('components/navbar.ejs')-%>
<div class="bg-primary">
    <div class="container">
        <p class="bcreak-crum">
            <a class="site-map" href="/">Trang chủ</a>  /  <a class="site-map" href="/danh-sach-san-pham">Tất cả sản phẩm</a>
        </p>
    </div>
</div>
        <div class="container py-5 px-5">
            <div class="mb-5">
                <form action="/danh-sach-san-pham/tim-kiem" method="POST" class="form-inline my-2 mb-3 my-lg-0 d-flex">
                    <input type="text" class="form-control" id="name" name="name">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Tìm</button>
                </form>
            </div>
            <div class="d-flex justify-content-center">
                <% products.forEach(product => {%>
                    <div class="card m-3 d-flex justify-content-center align-items-center" style="width: 18rem;">
                        <div>
                            <img class="card-img" src="/uploads/<%= product.image %>" alt="Card image cap">
                        </div>
                        <div class="mt-3 mb-3">
                            <h5 class="card-title text-center" style="font-size: 13px;"><%= product.name %></h5>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-center" style="font-size: 15px;"><%= product.price %></h5>
                            <form action="/gio-hang/them-gio-hang/<%= product._id %>" method="POST">
                                <button type="submit" class="btn btn-primary">Thêm vào giỏ hàng</button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>

<%-include('components/footer.nav.ejs')-%>
