<%-include('components/header.ejs')-%>
<%-include('components/navbar.ejs')-%>
<div class="bg-primary">
    <div class="container">
        <p class="bcreak-crum">
            <a class="site-map" href="/">Trang chủ</a>  /  <a class="site-map" href="/danh-sach-san-pham">Tất cả sản phẩm</a>/
            <a class="site-map" href="/danh-sach-san-pham">Sản phẩm tìm kiếm</a>
        </p>
    </div>
</div>
        <div class="container py-5 px-5">
            <div class="mb-5">
                <form method="POST" action="/danh-sach-san-pham/tim-kiem" class="form-inline my-2 mb-3 my-lg-0 d-flex">
                    <input class="form-control mr-sm-2" id="name" name="name" type="text" placeholder="Tìm sản phẩm" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Tìm</button>
                </form>
            </div>
            <div class="d-flex justify-content-center">
                <% products.forEach(product=> {%>
                    <div class="card  m-3 d-flex justify-content-center align-items-center" style="width: 18rem;">
                      <div>
                        <img src="/uploads/<%= product.image %>" class="card-img-top" style="width: 150px; height: 150px; padding: 10px;">
                      </div>
                      <div class="card-body">
                        <h5 class="card-title">
                          <%= product.name %>
                        </h5>
                        <p class="card-text">
                          <%= product.price %> VNĐ
                        </p>
                        <form action="/gio-hang/them-gio-hang/<%= product._id %>" method="POST">
                          <button type="submit" class="btn btn-primary">Thêm vào giỏ hàng</button>
                      </form>
                      </div>
                    </div>
                <% }) %>
            </div>
        </div>

<%-include('components/footer.nav.ejs')-%>
